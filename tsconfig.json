{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "jsx": "react",
    "outDir": "./dist",
    "lib": [
      "es2015",
      "es6",
      "dom"
    ],
    "skipLibCheck": true
  },
  "exclude": [
    "src/test-support",
    "src/**/*.test.*",
    "src/**/__mocks__"
  ],
  "include": [
    "src/"
  ],
  "compileOnSave": false
}